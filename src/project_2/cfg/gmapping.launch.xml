<launch>
  <arg name="scan_topic"  default="scan_multi" />
  <arg name="base_frame"  default="base_footprint"/>
  <arg name="odom_frame"  default="odom"/>

  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <param name="base_frame" value="$(arg base_frame)"/>
    <param name="odom_frame" value="$(arg odom_frame)"/>
    <param name="map_update_interval" value="5.0"/>
    <param name="maxUrange" value="5.0"/> <!-- Discarding all those measurements which exceed 5 meters (we are indoor; 5 meters should be enough) -->
    <param name="maxRange" value="16.0"/> <!-- Max range of the YDLIDAR G4 -->
    <param name="sigma" value="0.05"/>
    <param name="kernelSize" value="1"/>
    <param name="lstep" value="0.4"/> <!-- We increased the scan_matching optimization by increasing these values lstep & astep -->
    <param name="astep" value="0.1"/>
    <param name="iterations" value="5"/>
    <param name="lsigma" value="0.075"/>
    <param name="ogain" value="3.0"/>
    <param name="lskip" value="0"/>
    <param name="minimumScore" value="200"/>
    <param name="srr" value="0.2"/> <!-- Slightly increased the odometry error -->
    <param name="srt" value="0.3"/>
    <param name="str" value="0.2"/>
    <param name="stt" value="0.3"/>
    <param name="linearUpdate" value="1.0"/>
    <param name="angularUpdate" value="0.5"/>
    <param name="temporalUpdate" value="5.0"/>
    <param name="resampleThreshold" value="0.8"/>
    <param name="particles" value="30"/> <!-- We kept the particles set to 30 since making this number higher lead to some lag -->

    <param name="xmin" value="-40.0"/>
    <param name="ymin" value="-40.0"/>
    <param name="xmax" value="40.0"/>
    <param name="ymax" value="40.0"/>

    <param name="delta" value="0.05"/>
    <param name="llsamplerange" value="0.01"/>
    <param name="llsamplestep" value="0.01"/>
    <param name="lasamplerange" value="0.005"/>
    <param name="lasamplestep" value="0.005"/>
    <remap from="scan" to="$(arg scan_topic)"/>
  </node>
</launch>
